---
import "../styles/styles.scss";
import CodeViewer from "../components/CodeViewer.astro";
const html = `
<div class="box"></div>
`;
const css = `
.box {
  width: 100px;
  height: 100px ;
  background-color: red;
}
`;
const javascript = `
const box = document.querySelector('.box');
box.addEventListener('click', () => {
  box.style.backgroundColor = 'blue';
});
`;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>GSAP</title>
    <script is:inline src="/scripts/gsap.min.js"></script>
    <script is:inline src="/scripts/ScrollTrigger.min.js"></script>
    <script is:inline src="/scripts/GSDevTools.min.js"></script>
  </head>
  <body>
    <main>
      <section class="">
        <header class="title content--centered">
          <span>GSAP</span>
          <span>Animation Basics</span>
          <span>& Techniques</span>
        </header>

        <article class="chapter">
          <header class="chapter-header content--centered">
            <h3>Scroll Trigger</h3>
          </header>
          <ul class="chapter-list">
            <li>
              <a
                href="scroll-trigger/scroll-trigger-setup"
                class="content--centered">Setup</a
              >
            </li>
            <li>
              <a
                href="scroll-trigger/scroll-trigger-toggle-actions"
                class="content--centered">Toggle Actions</a
              >
            </li>
            <li>
              <a
                href="scroll-trigger/scroll-trigger-parallax-images"
                class="content--centered">Parallax Images</a
              >
            </li>
            <li>
              <a
                href="scroll-trigger/scroll-trigger-apple-landing-page"
                class="content--centered">Apple Landing Page</a
              >
            </li>
            <li>
              <a
                href="scroll-trigger/scroll-trigger-parallax-images-grid"
                class="content--centered">Parallax Images Grid</a
              >
            </li>
          </ul>
        </article>

        <article class="chapter">
          <header class="chapter-header content--centered">
            <h3>Smooth Scroll</h3>
          </header>
          <ul class="chapter-list">
            <li>
              <a
                href="smooth-scroll/smooth-scroll-setup"
                class="content--centered">Setup</a
              >
            </li>
            <li>
              <a
                href="smooth-scroll/smooth-scroll-parallax-images"
                class="content--centered">Parallax Images</a
              >
            </li>
            <li>
              <a
                href="smooth-scroll/smooth-scroll-scroll-trigger-images-grid"
                class="content--centered">Scroll Trigger Images Grid</a
              >
            </li>
            <li>
              <a
                href="smooth-scroll/smooth-scroll-parallax-block-clip-reveal"
                class="content--centered">Parallax Block Clip Reveal</a
              >
            </li>
          </ul>
        </article>

        <article class="chapter">
          <header class="chapter-header content--centered">
            <h3>Split Text</h3>
          </header>
          <ul class="chapter-list">
            <li>
              <a href="split-text/split-text-setup" class="content--centered"
                >Setup</a
              >
            </li>
            <li>
              <a
                href="split-text/split-text-paragraphs"
                class="content--centered">Paragraphs</a
              >
            </li>
          </ul>
        </article>

        <article class="chapter">
          <header class="chapter-header content--centered">
            <h3>Marquee</h3>
          </header>

          <ul class="chapter-list">
            <li>
              <a href="marquee/marquee-css-setup" class="content--centered"
                >CSS Setup</a
              >
            </li>
            <li>
              <a href="marquee/marquee-css-improved" class="content--centered"
                >CSS Improved</a
              >
            </li>
            <li>
              <a href="marquee/marquee-gsap-setup" class="content--centered"
                >GSAP Setup</a
              >
            </li>
            <li>
              <a
                href="marquee/marquee-gsap-horizontal-loop"
                class="content--centered">Horizontal Loop</a
              >
            </li>
          </ul>
        </article>

        <article class="chapter">
          <header class="chapter-header content--centered">
            <h3>Preloader</h3>
          </header>
          <ul class="chapter-list">
            <li>
              <a href="preloader/preloader-setup" class="content--centered"
                >Setup</a
              >
            </li>
            <li>
              <a
                href="preloader/preloader-lazy-loading-images"
                class="content--centered">Lazy Loading Images</a
              >
            </li>
            <li>
              <a
                href="preloader/preloader-external-images"
                class="content--centered">External Images</a
              >
            </li>
          </ul>
        </article>
      </section>

      <section class="chapter" style="width: 78%; margin: 0 auto;">
        <CodeViewer html={html} css={css} javascript={javascript} />
      </section>
    </main>
  </body>
</html>
