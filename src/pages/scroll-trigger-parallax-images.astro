---
import "../styles/scroll-trigger-parallax-images.scss";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>GSAP</title>
    <script is:inline src="/scripts/gsap.min.js"></script>
    <script is:inline src="/scripts/ScrollTrigger.min.js"></script>
    <script is:inline src="/scripts/ScrollSmoother.min.js"></script>
  </head>
  <body>
    <main id="smooth-wrapper">
      <div id="smooth-content">
        <section class="parallax-stream">
          <article class="section-1">
            <div class="section-1__content">
              <section class="image-container">
                <img
                  src="images/mountain-landscape.jpg"
                  alt="Dessert Landscape"
                />
              </section>
            </div>
          </article>
          <article class="section-2">
            <div class="section-2__content">
              <section class="image-container">
                <img
                  src="images/mountain-landscape.jpg"
                  alt="Dessert Landscape"
                />
              </section>
            </div>
          </article>
          <article class="section-3">
            <div class="section-3__content">
              <section class="image-container">
                <img
                  src="images/sunset-landscape.jpg"
                  alt="Dessert Landscape"
                />
              </section>
            </div>
          </article>
          <article class="section-4">
            <div class="section-4__content">
              <section class="image-container">
                <img
                  src="images/dessert-landscape.jpg"
                  alt="Dessert Landscape"
                />
              </section>
            </div>
          </article>
          <article class="section-5">
            <div class="section-5__content">
              <section class="image-container">
                <img
                  src="images/waterbow-portrait.jpg"
                  alt="Dessert Landscape"
                />
              </section>
            </div>
          </article>
          <article class="section-6">
            <div class="section-6__content">
              <section class="image-container">
                <img src="images/trees-portrait.jpg" alt="Dessert Landscape" />
              </section>
            </div>
          </article>
          <article class="section-7">
            <div class="section-7__content">
              <section class="image-container">
                <img
                  src="images/mountain-portrait.jpg"
                  alt="Dessert Landscape"
                />
              </section>
            </div>
          </article>
        </section>
      </div>
    </main>
  </body>
  <script is:inline src="/src/scripts/scroll-trigger-parallax-images.js"></script>
</html>
