<style lang="scss">
  @use "sass:list";
  @forward "../../styles/fonts";
  @import "../../styles/normalize";

  main {
    display: grid;
    width: 100dvw;
    min-height: 100dvh;
  }

  article {
    width: 100%;
    height: 100%;
    background-color: #1e1e1e;
    container: article / inline-size;
  }

  section {
    width: 100dvw;
    height: 100dvh;
    background-color: #1e1e1e;
    display: grid;
  }

  header {
    grid-column: 1 / 1;
    grid-row: 1 / 1;
    z-index: 200;
    line-height: 1;
    overflow: hidden;
    padding: 5cqw 1cqw;
    position: relative;
    cursor: pointer;
    display: flex;
    height: 100px; /* Adjust this value based on your needs */
    width: 100%;
  }

  h1 {
    color: white;
    font-family: "Garbarito", sans-serif;
    font-weight: 400;
    font-size: clamp(5cqw, 10vw, 10cqw);
    line-height: 100%;
    letter-spacing: -0.05em;
    position: absolute;
    top: 0;
    width: 100%;
    margin: 0;
    transition: color 0.125s ease-in-out;
    // transform: translateZ(0);
    // backface-visibility: hidden;
    // transform-style: preserve-3d;
    will-change: transform, opacity;

    &:nth-child(2) {
      top: 100%;
    }

    &:hover {
      color: red;
    }
  }

  .image-container {
    grid-column: 1 / 1;
    grid-row: 1 / 1;

    &__img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: all 0.5s ease-in-out;
      transform: translateZ(0);
      backface-visibility: hidden;
      will-change: transform, opacity;
      transform-style: preserve-3d;
    }
  }
</style>

