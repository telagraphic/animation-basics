  window.addEventListener("load", () => {
    gsap.registerPlugin(ScrollTrigger);

    const text = document.querySelector(".text-container--original");
    let tween = null;

    text.addEventListener("mouseenter", () => {
      if (tween) tween.kill();
      tween = gsap.to(text, {
        y: -200,
        duration: 0.5,
        ease: "power2.out",
        overwrite: true
      });
    });

